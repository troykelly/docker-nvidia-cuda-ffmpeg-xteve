#!/usr/bin/env bash
set -e

if [[ -z "${UID}" ]]; then
  UID=1000
else
  usermod -u ${UID} xteve
fi

if [[ -z "${GID}" ]]; then
  GID=1000
else
  groupmod -g ${GID} xteve
fi

chown -R ${UID}:${GID} /etc/xteve

if [[ -x "/usr/bin/xteve" ]]; then
  echo >&2 "ğŸ†— Ready 3"
  # first arg is `-f` or `--some-option`
  if [ "${1#-}" != "$1" ]; then
    echo >&2 "ğŸ“º Starting xteve with settings \"$@\""
    sudo -H -u xteve -- "/usr/local/bin/xteve_enable_mappings"
    sudo -H -u xteve -- "/usr/bin/xteve" "$@" &
    pid=$!
  else
    echo >&2 "ğŸ“º Executing \"$@\""
    sudo --preserve-env -H -u xteve -- bash -c 'exec "$@"' bash-run "$@" &
    pid=$!
  fi
  echo >&2 "ğŸ•´ï¸ Waiting for process ${pid} to finish"
  wait ${pid}
else
  echo >&2 "ğŸ›‘ No xteve executable"
fi